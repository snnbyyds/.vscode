{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-Werror",
                "-Wall",
                "-Wno-infinite-recursion",
                "-fsanitize=undefined",
                "-lm",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/gcc"
        },
        {
            "type": "shell",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-Werror",
                "-Wall",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-fstandalone-debug",
                "-fsanitize=undefined",
                "-lm",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "Task generated by Debugger.",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "NJU-ICS: Build riscv32 NEMU",
            "command": "/usr/bin/make",
            "args": [
                "-j8"
            ],
            "options": {
                "env": {
                    "NEMU_HOME": "${workspaceFolder}/ics2024/nemu",
                    "AM_HOME": "${workspaceFolder}/ics2024/abstract-machine"
                },
                "cwd": "${workspaceFolder}/ics2024/nemu"
            },
            "group": "build",
            "detail": "Build NEMU",
            "problemMatcher": [],
            "dependsOn": "NJU-ICS: Clean riscv32 NEMU"
        },
        {
            "type": "shell",
            "label": "NJU-ICS: Clean riscv32 NEMU",
            "command": "/usr/bin/make",
            "args": [
                "clean"
            ],
            "options": {
                "env": {
                    "NEMU_HOME": "${workspaceFolder}/ics2024/nemu",
                    "AM_HOME": "${workspaceFolder}/ics2024/abstract-machine"
                },
                "cwd": "${workspaceFolder}/ics2024/nemu"
            },
            "group": "build",
            "detail": "Build NEMU",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "ics-workbench: Build asm",
            "command": "/usr/bin/make",
            "args": [
                "-j8"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ics-workbench/asm"
            },
            "group": "build",
            "detail": "Build asm",
            "problemMatcher": []
        }
    ]
}
